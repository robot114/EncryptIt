<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zsm.encryptIt"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/encrypted"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:logo="@drawable/encrypted"
        android:name=".app.EncryptItApplication"
        android:allowClearUserData="false"
        android:uiOptions="splitActionBarWhenNarrow">
        <activity android:name=".ui.MainActivity" android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize" android:launchMode="singleTop" android:excludeFromRecents="true" android:showOnLockScreen="false">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.LoginActivity">
        </activity>
        <activity android:name=".ui.DetailActivity"
            	  android:uiOptions="splitActionBarWhenNarrow"
            	  android:excludeFromRecents="true"
            	  android:showOnLockScreen="false">
        </activity>
        <activity android:name=".ui.PasswordActivity"
				  android:showOnLockScreen="false"
				  android:noHistory="true"
				  android:excludeFromRecents="true">
        </activity>
        <provider android:name="com.zsm.encryptIt.android.EncryptItContentProvider"
            	  android:authorities="@string/contentProviderUri">
        </provider>

    </application>

</manifest>
